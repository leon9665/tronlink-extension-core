{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules", "src/tests"]
}
